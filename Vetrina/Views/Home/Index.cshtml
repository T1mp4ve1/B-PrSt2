@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row row-cols-5 g-2">

        @foreach (var p in Vetrina.Models.DataVetrina.Products)
        {
            <div class="col">
                <div class="card p-2" style="height: 100%; height: 400px;">
                    <img 
                       class="img-fluid" 
                       src=@p.PreviewImage 
                       alt="img" 
                       style="max-height: 200px; object-fit:cover;"
                    />
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <h5 class="card-title">@p.NameProduct</h5>
                            <p class="card-text">@p.PriceProduct €</p>
                        </div>
                        
                        <a
                           asp-controller="Details"
                           asp-action="ShowDetails"
                           asp-route-id="@p.Id"
                            class="btn btn-sm btn-warning">Dettagli</a>
                    </div>
                </div>
            </div>

        }
    </div>
    
</div>

